{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "customConditions": ["sui"],
    "paths": {
      "#components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/tests",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*/*.stories.tsx"
  ]
}
