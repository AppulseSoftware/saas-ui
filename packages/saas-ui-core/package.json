{
  "name": "@saas-ui/core",
  "version": "2.5.5",
  "description": "Saas UI - The React component library for startups.",
  "type": "module",
  "exports": {
    ".": {
      "sui": "./src/index.ts",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./app-shell": {
      "sui": "./src/app-shell/index.ts",
      "require": "./dist/app-shell/index.cjs",
      "types": "./dist/app-shell/index.d.ts",
      "import": "./dist/app-shell/index.js"
    },
    "./command": {
      "sui": "./src/command/index.ts",
      "require": "./dist/command/index.cjs",
      "types": "./dist/command/index.d.ts",
      "import": "./dist/command/index.js"
    },
    "./error-boundary": {
      "sui": "./src/error-boundary/index.ts",
      "require": "./dist/error-boundary/index.cjs",
      "types": "./dist/error-boundary/index.d.ts",
      "import": "./dist/error-boundary/index.js"
    },
    "./icon-badge": {
      "sui": "./src/icon-badge/index.ts",
      "require": "./dist/icon-badge/index.cjs",
      "types": "./dist/icon-badge/index.d.ts",
      "import": "./dist/icon-badge/index.js"
    },
    "./link": {
      "sui": "./src/link/index.ts",
      "require": "./dist/link/index.cjs",
      "types": "./dist/link/index.d.ts",
      "import": "./dist/link/index.js"
    },
    "./loading-overlay": {
      "sui": "./src/loading-overlay/index.ts",
      "require": "./dist/loading-overlay/index.cjs",
      "types": "./dist/loading-overlay/index.d.ts",
      "import": "./dist/loading-overlay/index.js"
    },
    "./persona": {
      "sui": "./src/persona/index.ts",
      "require": "./dist/persona/index.cjs",
      "types": "./dist/persona/index.d.ts",
      "import": "./dist/persona/index.js"
    },
    "./utils": {
      "sui": "./src/utils/index.ts",
      "require": "./dist/utils/index.cjs",
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./src": {
      "default": "./src/index.ts"
    }
  },
  "imports": {
    "#system": "./src/system"
  },
  "scripts": {
    "clean": "rimraf --no-glob ./dist",
    "build": "tsup src/index.ts src/utils/index.ts src/icons/index.ts --config tsup.config.ts",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --config ../../.eslintrc.js",
    "lint:staged": "lint-staged --allow-empty --config ../../lint-staged.config.js",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "author": "Eelco Wiersma <eelco@appulse.nl>",
  "license": "MIT",
  "homepage": "https://saas-ui.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/saas-js/saas-ui",
    "directory": "packages/saas-ui-react"
  },
  "keywords": [
    "react",
    "ui",
    "chakra-ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "emotion",
    "library"
  ],
  "storybook": {
    "title": "Saas UI",
    "url": "https://storybook.saas-ui.dev"
  },
  "dependencies": {
    "@chakra-ui/hooks": "^3.0.0-next.23",
    "@chakra-ui/utils": "^3.0.0-next.23",
    "@react-aria/interactions": "^3.22.4",
    "@react-aria/utils": "^3.25.3",
    "@saas-ui/react-utils": "workspace:*",
    "@saas-ui/theme": "workspace:*",
    "@zag-js/dom-event": "^0.75.0",
    "@zag-js/dom-utils": "^0.2.4"
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=3.0.0-next.13",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@chakra-ui/react": "^3.0.1",
    "@react-types/shared": "^3.25.0",
    "react-icons": "^5.3.0",
    "tsup": "^8.3.5"
  }
}
