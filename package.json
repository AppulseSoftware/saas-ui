{
  "name": "saas-ui",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "turbo": "^1.0.13"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "website"
  ],
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
